pipeline {
    agent {
        docker {
            image 'jenkins-s3chatbot:latest'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform Plan') {
            steps {
                sh 'terraform plan -no-color'
            }
        }
        // More stages to come
    }
}