pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm // Or your specific SCM configuration
            }
        }
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform Plan') {
            steps {
                sh 'terraform plan -no-color'
            }
        }
        // We will add more stages later
    }
}